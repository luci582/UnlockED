# Environment variables template for UnlockED
# Copy this file to .env and update the values

# Database Configuration
# PostgreSQL connection string for production use
DATABASE_URL="postgresql://username:password@localhost:5432/unlocked_db"

# API Configuration
# For development, use local backend
VITE_API_URL="http://localhost:3001/api"
# For production, set this to your production API URL
# VITE_API_URL="https://your-api-domain.com/api"

# Application Settings
NODE_ENV="development"

# JWT Configuration (for authentication)
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# File Upload Configuration
MAX_FILE_SIZE="5MB"
ALLOWED_IMAGE_TYPES="jpg,jpeg,png,webp"

# Development Settings
ENABLE_QUERY_LOGGING="true"
PRISMA_QUERY_LOG_LEVEL="info"

# Optional: Enable Prisma Studio
PRISMA_STUDIO_PORT=5555
