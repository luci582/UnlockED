# Environment variables declared in this file are available at build-time and run-time.
# Next.js + Vite will load these automatically

# Database Configuration
# PostgreSQL connection string
# Format: postgresql://username:password@localhost:5432/database_name
# Example for local development:
DATABASE_URL="postgresql://unlocked_user:unlocked_password@localhost:5432/unlocked_db"

# Alternative for cloud providers like Supabase, Railway, or Heroku:
# DATABASE_URL="postgresql://user:password@host:port/database_name?sslmode=require"

# Application Settings
NODE_ENV="development"

# JWT Configuration (for authentication)
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# Email Configuration (for notifications and verification)
EMAIL_FROM="noreply@unlocked.edu"
SMTP_HOST="smtp.example.com"
SMTP_PORT="587"
SMTP_USER="your-smtp-username"
SMTP_PASS="your-smtp-password"

# File Upload Configuration
MAX_FILE_SIZE="5MB"
ALLOWED_IMAGE_TYPES="jpg,jpeg,png,webp"

# API Configuration
API_BASE_URL="http://localhost:8082/api"

# Redis Configuration (for caching and sessions - optional)
REDIS_URL="redis://localhost:6379"

# Analytics (optional)
GOOGLE_ANALYTICS_ID=""

# Development Settings
ENABLE_QUERY_LOGGING="true"
PRISMA_QUERY_LOG_LEVEL="info"
