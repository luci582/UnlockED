# Environment variables declared in this file are available at build-time and run-time.
# Next.js + Vite will load these automatically

# Database Configuration
# PostgreSQL connection string
# Format: postgresql://username:password@localhost:5432/database_name
# Example for local development:
DATABASE_URL="postgresql://unlocked_user:unlocked_password@localhost:5432/unlocked_db"

# Alternative for cloud providers like Supabase, Railway, or Heroku:
# DATABASE_URL="postgresql://user:password@host:port/database_name?sslmode=require"

# Application Settings
NODE_ENV="development"

# JWT Configuration (for authentication)
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# File Upload Configuration
MAX_FILE_SIZE="5MB"
ALLOWED_IMAGE_TYPES="jpg,jpeg,png,webp"

# API Configuration
VITE_API_URL="http://localhost:3001/api"

# Development Settings
ENABLE_QUERY_LOGGING="true"
PRISMA_QUERY_LOG_LEVEL="info"
