# Production environment variables for Docker
# The frontend will use the nginx proxy for API calls
VITE_API_URL="/api"

# Keep other production settings
NODE_ENV="production"
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"
MAX_FILE_SIZE="5MB"
ALLOWED_IMAGE_TYPES="jpg,jpeg,png,webp"
ENABLE_QUERY_LOGGING="false"
PRISMA_QUERY_LOG_LEVEL="error"
